{
  "version": 2,
  "builds": [
    {
      "src": "pages/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/pages/api/chat.js"
    },
    {
      "src": "/api/greeting",
      "dest": "/pages/api/greeting.js"
    },
    {
      "src": "/api/messages",
      "dest": "/pages/api/messages.js"
    },
    {
      "src": "/api/typing",
      "dest": "/pages/api/typing.js"
    },
    {
      "src": "/chat/([^/]+)",
      "dest": "/pages/api/chat.js?slug=$1"
    }
  ]
}
